package maiorque;

import java.util.Scanner;

public class MaiorQue {

     /*Desenvolva um programa que leia três valores numéricos inteiros, 
      identifique e apresente o maior valor informado.
     */

    public static void main(String[] args) {

        Scanner teclado=new Scanner(System.in);
        int n1, n2, n3;
        
        System.out.println("Informe o priemrio valor: ");
        n1=teclado.nextInt();
        System.out.println("Informe o segundo valor: ");
        n2=teclado.nextInt();
        System.out.println("Informe o terceiro valor: ");
        n3=teclado.nextInt();

        if (n1 > n2 && n1 > n3){
            System.out.println("O primeiro valor é o maior: " + n1);
        }
        else {
            if (n2 > n1 && n2 > n3){
                System.out.println("o segundo valor é o maior: " + n2);
            }

            if (n3 > n1 && n3 > n2){
                System.out.println("o terceiro valor é o maior: " + n3);
            }
        }
       
    }
    
}
